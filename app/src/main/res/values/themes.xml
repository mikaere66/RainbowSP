<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Rainbows" parent="Theme.MaterialComponents.DayNight.DarkActionBar" />

    <!-- The following custom styles appear in order of hierarchy, with the parent at the top -->
    <style name="Theme.Rainbows.Gravity" parent="@android:style/Widget.Material.TextView">
        <item name="android:textAlignment">gravity</item>
    </style>
    <style name="Theme.Rainbows.GravityStart" parent="@style/Theme.Rainbows.Gravity">
        <item name="android:gravity">start</item>
    </style>
    <style name="Theme.Rainbows.GravityEnd" parent="@style/Theme.Rainbows.Gravity">
        <item name="android:gravity">end</item>
    </style>

    <style name="Theme.Rainbows.MaterialSwitch" parent="@style/Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:textColor">@color/default_text_color</item>
    </style>

</resources>
